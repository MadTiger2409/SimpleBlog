@model SimpleBlog.Commands.User.CreateUserCommand
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link rel="stylesheet" href="~/css/sites/registration.css" />
}

@if (ViewBag.ShowMessage == true)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<div class="card border-secondary mb-3">
    <div class="card-body">
        <h5 class="card-title">Registration</h5>
        <hr>
        <form action="../account/register" method="post">
            <div class="form-group">
                <label for="login">Login</label>
                @Html.TextBoxFor(model => model.Login, new
           {
               @type = "text",
               @class = "form-control",
               @id = "login",
               @placeholder = "Enter your login",
               @title = "Login can contain uppercase and lovercase letters and numbers, and from 5 to 20 letters",
               @pattern = "[a-zA-Z][a-zA-Z0-9]{5,20}"
           })

            </div>
            <div class="form-group">
                <label for="password">Password</label>
                @Html.TextBoxFor(model => model.Password, new
           {
               @type = "password",
               @class = "form-control",
               @id = "password",
               @placeholder = "Enter your password",
               @title = "Password must contain at least one number and one uppercase and lowercase letter, and from 8 to 30 characters",
               @pattern = @"(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,30}"
           })
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
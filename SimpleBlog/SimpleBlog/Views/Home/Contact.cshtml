@model SimpleBlog.Commands.Message.CreateMessageCommand
@{
    ViewData["Title"] = "Contact";
}
@section Styles{
    <link rel="stylesheet" href="~/css/sites/contact.css" />
}

@if (ViewBag.Added == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        The message has been <strong>successfully</strong> sent.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (ViewBag.ShowMessage == true)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-sm-6">
        <div class="card border-secondary mb-3">
            <div class="card-body">
                <h5 class="card-title">Contact</h5>
                <hr>
                <address>
                    Michael B.<br />
                    Katowice, Silesia Voivodeship<br />
                    Phone: 123-456-789
                </address>

                <address>
                    <strong>GitHub:</strong> <a href="https://github.com/MadTiger2409">github.com/MadTiger2409</a><br />
                    <strong>LinkedIn:</strong> <a href="https://www.linkedin.com/in/micha%C5%82-b-4292a6163/">linkedin.com/in/michał-b</a>
                </address>
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="card border-secondary mb-3">
            <div class=" card-body">
                <h5 class="card-title">Message Us</h5>
                <hr>
                <form action="../contact" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        @Html.TextBoxFor(model => model.Name, new
                   {
                       @type = "text",
                       @class = "form-control",
                       @id = "name",
                       @placeholder = "Enter your name",
                       @pattern = @"^[A-Za-z]\S{2,50}"
                   })
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        @Html.TextBoxFor(model => model.Email, new
                   {
                       @type = "email",
                       @class = "form-control",
                       @id = "email",
                       @placeholder = "Enter your email",
                       pattern = @"^\w+([-+.']\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*"
                   })
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        @Html.TextAreaFor(model => model.Text, new
                   {
                       @type = "text",
                       @class = "form-control",
                       @id = "message",
                       @placeholder = "Enter your message",
                       @pattern = @".{5,400}",
                       @maxlength = "400",
                       @minlength = 5
                   })
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>
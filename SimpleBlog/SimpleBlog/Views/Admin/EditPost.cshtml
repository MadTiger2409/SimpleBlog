@model SimpleBlog.Commands.Post.UpdatePostCommand

@{
    ViewData["Title"] = "EditPost";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/css/sites/newPost.css" />
}

@if (ViewBag.ShowMessage == true)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card border-secondary mb-3">
    <div class="card-body bg-dark">
        <h5 class="card-title">Edit post</h5>
        <hr>
        <form action="../edit-post" method="post">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control bg-dark" id="title" pattern="^[A-Za-z-0-9\.\-\!\?]+( [A-Za-z-0-9\.\-\!\?]+)*$" minlength="3" maxlength="150" required />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control bg-dark" id="description" pattern="^[A-Za-z-0-9\.\-\!\?]+( [A-Za-z-0-9\.\-\!\?]+)*$" minlength="10" maxlength="250" required></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control bg-dark" id="postContent" pattern="^[A-Za-z-0-9\.\-\!\?]+( [A-Za-z-0-9\.\-\!\?]+)*$" minlength="10" maxlength="2000" rows="5" required></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control bg-dark" id="tags" pattern="^[a-z\-\;]+([a-z\-\;]+)*$" minlength="3" maxlength="200" required />
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Save" class="btn btn-primary" />
        </form>
    </div>
</div>